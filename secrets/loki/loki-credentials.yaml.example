# Example Grafana credentials secret for Loki Stack
# 
# Usage:
# 1. Copy this file to loki-credentials.yaml (do NOT commit to Git)
# 2. Replace the password value with a secure password
# 3. Apply: kubectl apply -f loki-credentials.yaml -n grafana
#
# Generate a secure password:
#   GRAFANA_PASSWORD=$(openssl rand -base64 32)
#
apiVersion: v1
kind: Secret
metadata:
  name: loki-credentials
  namespace: grafana
  labels:
    app: loki
    component: grafana
    managed-by: gitops
type: Opaque
stringData:
  # Grafana admin password (plain text - Grafana will hash it internally)
  adminPassword: "CHANGE_ME_TO_SECURE_PASSWORD"
