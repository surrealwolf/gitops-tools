# Graylog Credentials Secret
# This is a reference template - copy and customize for your use
# DO NOT commit actual secrets to git
#
# Usage:
# 1. Copy this file: cp secrets/graylog/graylog-credentials.yaml.example secrets/graylog/graylog-credentials.yaml
# 2. Edit secrets/graylog/graylog-credentials.yaml with your actual secrets
# 3. Apply: kubectl apply -f secrets/graylog/graylog-credentials.yaml
#
# To generate secure secrets:
#   - MongoDB password: openssl rand -base64 32
#   - Graylog password secret: openssl rand -base64 64
#   - Root password SHA2: echo -n "your-password" | shasum -a 256 | cut -d' ' -f1

apiVersion: v1
kind: Secret
metadata:
  name: graylog-credentials
  namespace: managed-graylog
type: Opaque
stringData:
  # MongoDB password for 'graylog' user
  # Used in GRAYLOG_MONGODB_URI connection string
  # Generate with: openssl rand -base64 32
  mongodb-password: "CHANGE_ME"
  
  # Graylog password secret (used for encrypting password storage)
  # Generate with: openssl rand -base64 64
  # This should be a long random string
  password-secret: "CHANGE_ME"
  
  # Graylog root user password (SHA2 hash)
  # Generate with: echo -n "your-password" | shasum -a 256 | cut -d' ' -f1
  # Default password "admin" SHA2: 8c6976e5b5410415bde908bd4dee15dfb167a9c873fc4bb8a81f6f2ab448a918
  # Change this to a strong password hash
  root-password-sha2: "8c6976e5b5410415bde908bd4dee15dfb167a9c873fc4bb8a81f6f2ab448a918"
